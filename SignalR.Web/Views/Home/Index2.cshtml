@section Scripts{

    <script src="~/lib/@@microsoft/signalr/dist/browser/signalr.min.js"></script>

    <script type="text/javascript">

        //configureLogging(signalR.LogLevel.Information)
        var connection = new signalR.HubConnectionBuilder().withAutomaticReconnect([1000, 3000, 3000, 2000]).withUrl("/MyHub").build();

        connection.start().then(() => {
            console.log("constatus").text(connection.connectionstate);

            connection.invoke("SendMessage","İlk Mesaj");
        }).catch((err) => { console.log(err) })

        connection.on("ReceiveMessage", (message) => {
            console.log(message);
        })

    </script>
}